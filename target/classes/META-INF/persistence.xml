<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="AuthPU" transaction-type="JTA">
    <provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
    <jta-data-source>AuthDB</jta-data-source>
    <class>eu.jangos.auth.model.Locale</class>
    <class>eu.jangos.auth.model.Parameter1</class>
    <class>eu.jangos.auth.model.BannedIP</class>
    <class>eu.jangos.auth.model.RealmAccount</class>
    <class>eu.jangos.auth.model.RealmTimeZone</class>
    <class>eu.jangos.auth.model.BannedAccount</class>
    <class>eu.jangos.auth.model.Realm</class>
    <class>eu.jangos.auth.model.Account</class>
    <class>eu.jangos.auth.model.RealmAccountPK</class>
    <class>eu.jangos.auth.model.RealmType</class>
    <class>eu.jangos.auth.model.Commands</class>
    <class>eu.jangos.auth.model.Roles</class>
    <class>eu.jangos.auth.model.Servers</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!--<property name="openjpa.Log" value="DefaultLevel=TRACE,SQL=TRACE"/>
      <property name="openjpa.ConnectionFactoryProperties" value="printParameters=true"/>-->
    </properties>
  </persistence-unit>
</persistence>
